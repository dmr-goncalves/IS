<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dmrg.isapp.RegisterActivity">

    <EditText
        android:id="@+id/name_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/username_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:layout_below="@id/name_register"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/password_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_below="@id/username_register"
        android:layout_centerHorizontal="true"/>


    <EditText
        android:id="@+id/repeatPassword_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Repeat Password"
        android:inputType="textPassword"
        android:layout_below="@id/password_register"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/email_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="E-Mail"
        android:inputType="textEmailAddress"
        android:layout_below="@id/repeatPassword_register"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Register"
        android:textSize="25sp"
        android:layout_below="@id/email_register"
        android:layout_centerHorizontal="true"/>

    <RadioButton
        android:id="@+id/user_radioButton_register"
        android:layout_width="93dp"
        android:layout_height="30dp"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="90dp"
        android:text="User"
        android:checked="true"
        android:layout_below="@+id/register_button"/>

    <RadioButton
        android:id="@+id/producer_radioButton_register"
        android:layout_width="93dp"
        android:layout_height="30dp"
        android:text="Producer"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/user_radioButton_register"
        android:layout_below="@+id/register_button"/>

</RelativeLayout>
