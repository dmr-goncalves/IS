<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reg_dev_DrawerUser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dmrg.isapp.UserMainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarAlwaysDrawHorizontalTrack="true">

        <include
            android:id="@+id/regDev_nav_action"
            layout="@layout/navigation_action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/user_regDev_devName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint=" Device Name"
            android:layout_below="@id/regDev_nav_action"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/user_regDev_devType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Device Type"
            android:inputType="textPersonName"
            android:layout_below="@+id/user_regDev_devName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:ems="10"/>

        <EditText
            android:id="@+id/user_regDev_devModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Product Model"
            android:inputType="textPersonName"
            android:layout_below="@+id/user_regDev_devType"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:ems="10"/>


        <EditText
            android:id="@+id/user_regDev_devProducer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Producer"
            android:inputType="textPersonName"
            android:layout_below="@+id/user_regDev_devModel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:ems="10"/>

        <Button
            android:id="@+id/user_regDev_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_regDev_devProducer"
            android:text="Register"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/user_regDev_nav_view"
        app:menu="@menu/user_check_history_menu"
        android:layout_gravity="start"/>

</android.support.v4.widget.DrawerLayout>
